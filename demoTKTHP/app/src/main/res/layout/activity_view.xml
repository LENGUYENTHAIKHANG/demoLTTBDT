<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin bạn đã nhập!\n Những thông tin này đã được lưu lại"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/ten"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSV:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/msv"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm Sinh:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/namsinh"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/lop"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quê:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/que"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/sdt"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/email"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="30dp"
        android:id="@+id/btn8"
        android:layout_gravity="center"
        app:cornerRadius="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu bạn muốn thay đổi thông tin gì hãy quay lại trang trước và đảm bảo nhập đúng Mã Sinh Viên!"/>

</LinearLayout>